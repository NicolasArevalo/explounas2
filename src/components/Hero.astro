<style>
	:root {
		--colores: linear-gradient(
			-95deg,
			#982aff,
			#b162fb,
			#9a4abe,
			#aa43c9,
			#b243c9
		);
	}
	/* Arrow Button 
	-----------------------------------*/
	.container-arrow {
		fill: #777777;
		text-align: center;
		position: absolute;
		bottom: 6rem;
		left: 0;
		z-index: 10;
	}
	.container-arrow:hover,
	.container-arrow:focus {
		text-decoration: none;
	}

	/* Arrow Bouncing */
	.container-arrow span {
		display: inline-block;
		font-size: 80px;
		animation: 0.7s down infinite alternate;
		-webkit-animation: 0.7s down infinite alternate;
	}
	/***Animation Arrow down***/
	@keyframes down {
		0% {
			transform: translateY(0px);
		}
		100% {
			transform: translateY(20px);
		}
	}
	@-webkit-keyframes down {
		0% {
			-webkit-transform: translateY(0px);
		}
		100% {
			-webkit-transform: translateY(20px);
		}
	}

	h1 {
		font-family: 'xmas';
		color: transparent;
		background: var(--colores);
		background-clip: text;
		-webkit-background-clip: text;
		background-size: 600%;
		animation: anime 12s linear infinite;
	}
	main {
	}
	main::after {
		content: '';
		position: absolute;
		width: 1000px;
		height: 500px;
		/* top: 0; */
		/* left: 0; */
		right: 0;
		bottom: 0;
		z-index: -10;
		filter: blur(100px);
		background: url('../assets/mancha.svg');
	}
	#cta {
		background: var(--colores);
		background-size: 600%;
		animation: anime 12s linear infinite;
	}
	@keyframes anime {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}
	@media (max-width: 641px) {
		.container-arrow {
			display: none;
		}
	}
	@media (max-width: 669px) {
		main::after {
			width: 800px;
			height: 200px;
		}
	}
</style>
